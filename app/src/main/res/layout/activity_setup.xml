<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/snackbarContainer"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.badoualy.stepperindicator.StepperIndicator
        android:id="@+id/stepperIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:stpi_circleColor="#009688"
        app:stpi_stepCount="3"/>

    <com.unbrick.xbox.Helper.NonSwipeableViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/stepperIndicator"
        android:id="@+id/pagerSetup"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>