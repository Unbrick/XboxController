<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textAlignment="viewStart"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:text="Console information:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textAlignment="viewStart"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:text="CPUKey:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="15dp"
                        android:text="waiting..."
                        android:textColor="@color/md_black_1000"
                        android:id="@+id/tvSetupCpuKey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <LinearLayout
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textAlignment="viewStart"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:text="Dashboard:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Space
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginLeft="15dp"
                            android:text="waiting..."
                            android:textColor="@color/md_black_1000"
                            android:id="@+id/tvDashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <LinearLayout
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textAlignment="viewStart"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:text="Board:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Space
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginLeft="15dp"
                            android:text="waiting..."
                            android:textColor="@color/md_black_1000"
                            android:id="@+id/tvBoardName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textAlignment="viewStart"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:text="Console Name:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Space
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent" />

                        <TextView
                            android:layout_marginLeft="15dp"
                            android:text="waiting..."
                            android:textColor="@color/md_black_1000"
                            android:id="@+id/tvConsoleName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textAlignment="viewStart"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:text="Tempratures:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textAlignment="viewStart"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:text="CPU:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Space
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginLeft="15dp"
                            android:text="waiting..."
                            android:textColor="@color/md_black_1000"
                            android:id="@+id/tvCpuTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textAlignment="viewStart"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:text="GPU:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Space
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginLeft="15dp"
                            android:text="waiting..."
                            android:textColor="@color/md_black_1000"
                            android:id="@+id/tvGPUTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textAlignment="viewStart"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:text="RAM:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Space
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginLeft="15dp"
                            android:text="waiting..."
                            android:textColor="@color/md_black_1000"
                            android:id="@+id/tvRAMTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textAlignment="viewStart"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:text="Motherboard:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Space
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginLeft="15dp"
                            android:text="waiting..."
                            android:textColor="@color/md_black_1000"
                            android:id="@+id/tvMotherboardTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>

