<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivHeader"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@drawable/black"
                    android:src="@drawable/drawer_header"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tvConsoleNameHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="180dp"
                    android:textColor="@color/md_white_1000"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_below="@+id/ivHeader"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_margin="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:textAlignment="viewStart"
                                android:gravity="start"
                                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                android:text="@string/console_information"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:gravity="start"
                                android:textAlignment="viewStart"
                                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                android:text="@string/cpukey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_marginStart="15dp"
                                android:layout_marginBottom="4dp"
                                android:layout_marginLeft="15dp"
                                android:text="@string/textWaiting"
                                android:textColor="@color/md_black_1000"
                                android:id="@+id/tvSetupCpuKey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />


                            <LinearLayout
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:gravity="start"
                                    android:textAlignment="viewStart"
                                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                    android:text="@string/dashboard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <Space
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_marginStart="15dp"
                                    android:layout_marginLeft="15dp"
                                    android:text="@string/textWaiting"
                                    android:textColor="@color/md_black_1000"
                                    android:id="@+id/tvDashboard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>


                            <LinearLayout
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:gravity="start"

                                    android:textAlignment="viewStart"
                                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                    android:text="@string/board"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <Space
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_marginStart="15dp"
                                    android:layout_marginLeft="15dp"
                                    android:text="@string/textWaiting"
                                    android:textColor="@color/md_black_1000"
                                    android:id="@+id/tvBoardName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:gravity="start"
                                    android:textAlignment="viewStart"
                                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                    android:text="@string/console_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <Space
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent" />

                                <TextView
                                    android:layout_marginStart="15dp"
                                    android:layout_marginLeft="15dp"
                                    android:text="@string/textWaiting"
                                    android:textColor="@color/md_black_1000"
                                    android:id="@+id/tvConsoleName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:gravity="start"
                                android:textAlignment="viewStart"
                                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                android:text="@string/temperatures"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:gravity="start"
                                    android:textAlignment="viewStart"
                                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                    android:text="@string/cpu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <Space
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_marginStart="15dp"
                                    android:layout_marginLeft="15dp"
                                    android:text="@string/textWaiting"
                                    android:textColor="@color/md_black_1000"
                                    android:id="@+id/tvCpuTemp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:gravity="start"
                                    android:textAlignment="viewStart"
                                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                    android:text="@string/gpu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <Space
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_marginStart="15dp"
                                    android:layout_marginLeft="15dp"
                                    android:text="@string/textWaiting"
                                    android:textColor="@color/md_black_1000"
                                    android:id="@+id/tvGPUTemp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:gravity="start"
                                    android:textAlignment="viewStart"
                                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                    android:text="@string/ram"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <Space
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_marginStart="15dp"
                                    android:layout_marginLeft="15dp"
                                    android:text="@string/textWaiting"
                                    android:textColor="@color/md_black_1000"
                                    android:id="@+id/tvRAMTemp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:gravity="start"
                                    android:textAlignment="viewStart"
                                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                    android:text="@string/motherboard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <Space
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginStart="15dp"
                                    android:text="@string/textWaiting"
                                    android:textColor="@color/md_black_1000"
                                    android:id="@+id/tvMotherboardTemp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <com.github.clans.fab.FloatingActionMenu
                    android:id="@+id/floatingActionMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tvConsoleNameHeader"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    app:menu_openDirection="down"
                    app:menu_fab_size="normal"
                    tools:ignore="RelativeOverlap">


                    <com.github.clans.fab.FloatingActionButton
                        app:fabSize="mini"
                        android:id="@+id/fabRebootConsole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_reboot_console"
                        app:fab_label="Reboot"/>

                    <com.github.clans.fab.FloatingActionButton
                        app:fabSize="mini"
                        android:id="@+id/fabChangeGT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_change_gamertag"
                        app:fab_label="Change GT"/>

                    <com.github.clans.fab.FloatingActionButton
                        app:fabSize="mini"
                        android:id="@+id/fabNotify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_xnotify"
                        app:fab_label="xNotify" />

                </com.github.clans.fab.FloatingActionMenu>

            </RelativeLayout>

    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>

